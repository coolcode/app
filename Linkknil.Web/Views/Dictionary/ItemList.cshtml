@(
	 Html.Grid<DictionaryItem>().Columns(c => {
		c.Column(x => x.Id).CheckBox();
		c.Column(x => x.SortIndex).Header("序号").Width(40).Sortable(true).Align(Alignment.Right);
		c.Column(x => x.Name).Header("类别").Width(120).Sortable(true);
		c.Column(x => x.Value).Header("键值").Width(100).Sortable(true);
		c.Column(x => x.Text).Header("内容").Sortable(true);
		c.Column(x => x.Enabled).Header("是否有效").Width(40).Sortable(true).Align(Alignment.Center).Template(x => (x.Enabled ? "是" : "否"));
		c.Column(x => x.IsInner).Header("是否内置").Width(40).Sortable(true).Align(Alignment.Center).Template(x => (x.IsInner ? "是" : "否"));
		c.Column(x => x.Id).Header("操作").Width(100).Partial("Operator").Align(Alignment.Center);
	})
) 