@model AppCategory
@{
	Layout = "~/Views/Shared/_Form.cshtml";
	ViewBag.Title = "应用分类";
}

@using (Html.BeginForm(new { entity = "AppCategory" }))
{
	<div class="content-box">
		<div class="content-box-header">
			<h3>@ViewBag.Title</h3>
			<div class="clear">
			</div>
		</div>
		<div class="content-box-content">
			<div class="tab-content default-tab" id="tab1">
				@Html.ValidationSummary(true) 
				<fieldset>
					<legend></legend>
					<p>
						<label class="field">分类名称</label>
						@Html.TextBoxFor(model => model.Name)
					</p> 
					<p>
						<label class="field">排序号</label>
						@Html.TextBoxFor(model => model.Sort)
					</p> 
					<p>
						<label class="field">状态</label>
						@Html.RadioButtonListFor(model => model.Status, "ItemStatus")
					</p> 
				</fieldset>  
				<div class="clear">
				</div>
			</div>
		</div>
		<div align="center">
			<input type="submit" value="保存" />
			<input type="button" value="取消" onclick="parent.$.fancybox.close()" />
		</div>
	</div>
} 

@section script{
	<script type="text/javascript">

		$(function () {
			$("form").validate({
				rules: {
					Name: "required",
					Status: "required"
				},
				submitHandler: function (form) {
					$.ajaxSave({ url: form.action });
				}
			});
		});
	</script>
}
