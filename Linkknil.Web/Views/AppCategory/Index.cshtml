@{
	Layout = "~/Views/Shared/_Site.cshtml";
	ViewBag.Title = "应用分类";
}
<div class="content-box">
	<div class="content-box-header">
		<h3>@ViewBag.Title
		</h3>
		@Html.Partial("Controls/_Toolbar", new { entity = "AppCategory" })
		<ul class="content-box-tabs">
			<li></li>
		</ul>
		<div class="clear">
		</div>
	</div>
	<div class="content-box-content">
		<div class="tab-content default-tab" id="tab1">
			@using (Html.BeginForm()) {  
				@Html.Search().Target("grid").Template(@<text>
				<table width="100%">
					<tr>
						<th style="width: 80px">
							名称
						</th>
						<td style="width: 200px">
							@Html.TextBox("it.Name.Contains(@0)", "")
						</td>
					</tr>
				</table>
				</text>)
				@Html.GridLoader("grid", "ItemList", new { entity = "AppCategory" })
				@Html.Hidden("entity", "AppCategory");
			}

		</div>
	</div>
</div>
